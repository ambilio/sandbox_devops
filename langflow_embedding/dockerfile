FROM python:3.11-slim

# system deps
RUN apt-get update && apt-get install -y \
    nginx \
    && rm -rf /var/lib/apt/lists/*

# install langflow
RUN pip install --no-cache-dir langflow

# nginx config
COPY nginx.conf /etc/nginx/nginx.conf

# startup script
COPY start.sh /start.sh
RUN chmod +x /start.sh

EXPOSE 80

CMD ["/start.sh"]
